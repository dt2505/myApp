{% extends "::base.html.twig" %}

{% block stylesheets %}
    {% stylesheets
        '@chosen_css'
        '@fullcalendar_css'
        '@bootstrap_datepicker_css'
        '@detail_css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div id="container" class="effect navbar-fixed mainnav-out">
        {# navbar #}
        {% include 'AppBundle:elements:navbar/lobby-navbar.html.twig' with {
            writeStatus: 'invisible',
            mainnav: 'invisible',
            girl: 'invisible',
            submitDetails: 'visible'
        } %}

        {# content #}
        <div class="boxed">
            <div id="content-container">
                <div id="page-content" class="row">
                    {% include 'AppBundle:elements:detail/detail-form.html.twig' with {
                        detail: detail
                    } %}
                </div>
            </div>
        </div>

        {# scroll to top #}
        <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@chosen'
        '@moment'
        '@fullcalendar'
        '@jssor'
        '@jssor_slider'
        '@boostrap_datepicker'
        '@detail'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}