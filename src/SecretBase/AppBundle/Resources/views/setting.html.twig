{% extends "::base.html.twig" %}

{% block stylesheets %}
    {% stylesheets
        '@chosen_css'
        '@settings_css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div id="container" class="effect navbar-fixed">
        {# navbar #}
        {% include 'AppBundle:elements:navbar/lobby-navbar.html.twig' with {
            writeStatus: 'invisible',
            mainnav: 'invisible'
        } %}

        {# content #}
        <div class="boxed">
            <div id="content-container">
                <div id="page-content" class="row">
                    {% include 'AppBundle:elements:settings/settings-panel.html.twig' with {
                        active: "active"
                    } %}

                </div>
            </div>
        </div>

        {# scroll to top #}
        <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@chosen'
        '@settings'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}