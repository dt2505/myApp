{% extends "::base.html.twig" %}

{% block body %}
    <div class="reg-wizard-start-container bg-dark-gray" style="min-width: 1024px;">
        <div class="reg-wizard-header border-bottom" >
            <div class="reg-wizard-header-container" style="margin-left: auto; margin-right: auto; width: 980px; overflow: hidden; padding-left: 15px;">
                {% include "AppBundle:elements:registration/wizard/header/header-steps-indicator.html.twig" with {step: 1, steps: 2}%}
            </div>
        </div>
        <div class="reg-wizard-body" style="height: 580px;">
            <div class="reg-wizard-body-container" style="margin-left: auto; margin-right: auto; width: 980px;">
                <div class="reg-wizard-body-left" style="display: inline-block; float: left; width: 50%; height:100%; padding: 30px 15px 15px 15px">
                    {% include "AppBundle:elements:registration/wizard/start/body/left/three-rows.html.twig" with {userName: "test", siteName: 'site.name'|trans({}, 'SiteName')}%}
                </div>
                <div class="reg-wizard-body-right" style="display: inline-block; float: left;width: 50%; height: 100%; padding: 30px 15px 15px 15px">
                    {% include "AppBundle:elements:registration/wizard/start/body/right/four-rows.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}