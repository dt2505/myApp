{% extends "::base.html.twig" %}

{% block body %}
    <div class="reg-wizard-container" style="min-width: 1024px;">
        <div class="reg-wizard-header bg-dark-gray border-bottom" >
            <div class="reg-wizard-header-container" style="margin-left: auto; margin-right: auto; width: 980px; overflow: hidden; padding-left: 15px;">
                {% include "AppBundle:elements:registration/wizard/header/header-steps-indicator.html.twig" with {step: 2, steps: 2}%}
            </div>
        </div>
        <div class="container bg-dark-gray" style="width: 980px;">
            <div class="row">
                <div class="col-xs-6" style="padding: 30px 15px 15px 15px">
                    {% include 'AppBundle:elements:registration/wizard/profile/profile-picture.html.twig' with {firstName: 'test@gmail.com', lastName: ''} %}
                </div>
                <div class="col-xs-6 border-left" style="padding: 30px 15px 15px 15px">
                    {% include 'AppBundle:elements:registration/wizard/profile/profile-details.html.twig' with {firstName: 'test@gmail.com', lastName: '', email: 'test@gmail.com'} %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}