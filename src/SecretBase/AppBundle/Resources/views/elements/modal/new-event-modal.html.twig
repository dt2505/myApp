{% extends "AppBundle:elements:modal/standard-modal.html.twig" %}

{% block header %}
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Event</h4>
{% endblock %}

{% block body %}
    <div class="panel panel-colorful bg-dark no-mar" >
        <div class="panel-body form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="name">Title</label>
                <div class="col-sm-10">
                    <input type="text" placeholder="Event title" id="event-title" name="event-title" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="age">Start</label>
                <div class="col-sm-10" id="dp-start-date">
                    <div class="input-group date">
                        <input type="text" placeholder="dd-mm-yyyy" id="start-date" name="start-date" class="form-control">
                        <span class="input-group-addon"><i class="fa fa-calendar fa-lg"></i></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="age">End</label>
                <div class="col-sm-10" id="dp-end-date">
                    <div class="input-group date">
                        <input type="text" placeholder="dd-mm-yyyy" id="end-date" name="end-date" class="form-control">
                        <span class="input-group-addon"><i class="fa fa-calendar fa-lg"></i></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="">Color</label>
                <div class="col-sm-10">
                    {# target guest #}
                    <select id="event-color">
                        <option value="purple" class="text-purple" selected>Purple</option>
                        <option value="mint" class="text-mint">Mint</option>
                        <option value="warning" class="text-warning">Warning</option>
                        <option value="danger" class="text-danger">Danger</option>
                        <option value="success" class="text-success">Success</option>
                        <option value="dark" class="text-dark">Dark</option>
                        <option value="pink" class="text-pink">Pink</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <button type="button" id="modal-cancel" class="btn btn-dark" data-dismiss="modal">Cancel</button>
    <button type="button" id="modal-remove" class="btn btn-dark hidden">Remove</button>
    <button type="button" id="modal-ok" class="btn btn-primary">Ok</button>
{% endblock %}
