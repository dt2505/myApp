{% extends "AppBundle:elements:modal/standard-modal.html.twig" %}

{% block header %}
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">New event</h4>
{% endblock %}

{% block body %}
    <div class="panel panel-colorful bg-dark no-mar" >
        <div class="panel-body form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="name">Name</label>
                <div class="col-sm-10">
                    <input type="text" placeholder="Enter event's name" id="eventName" name="eventName" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="age">Start</label>
                <div class="col-sm-5">
                    <input type="text" placeholder="dd-mm-yyyy" id="startDate" name="startDate" class="form-control">
                </div>
                <div class="col-sm-5">
                    <input type="text" placeholder="hh:mm" id="startTime" name="startTime" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="age">End</label>
                <div class="col-sm-5">
                    <input type="text" placeholder="dd-mm-yyyy" id="endDate" name="endDate" class="form-control">
                </div>
                <div class="col-sm-5">
                    <input type="text" placeholder="dd-mm-yyyy" id="endTime" name="endTime" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="">Color</label>
                <div class="col-sm-10">
                    {# target guest #}
                    <select id="event-color">
                        <option value="purple" class="text-purple" selected>Purple</option>
                        <option value="mint" class="text-mint">Mint</option>
                        <option value="warning" class="text-warning">Warning</option>
                        <option value="danger" class="text-danger">Danger</option>
                        <option value="success" class="text-success">Success</option>
                        <option value="dark" class="text-dark">Dark</option>
                        <option value="pink" class="text-pink">Pink</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">All day event</label>
                <div class="col-sm-10">
                    <div class="radio">
                        <label class="form-radio form-normal form-text">
                            <input type="radio" name="allDayEvent">Yes
                        </label>
                        <label class="form-radio form-normal form-text active">
                            <input type="radio" name="allDayEvent" checked>No
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <button type="button" class="btn btn-dark" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary">Ok</button>
{% endblock %}
