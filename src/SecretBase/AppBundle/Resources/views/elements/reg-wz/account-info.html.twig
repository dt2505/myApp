    <label class="col-lg-3 control-label">{{ 'label.username'|trans }}</label>
    <div class="col-lg-7">
        <input type="text" class="form-control" name="username" placeholder="{{ 'placeholder.username'|trans }}">
    </div>
</div>
<div class="form-group">
    <label class="col-lg-3 control-label">{{ 'label.email'|trans }}</label>
    <div class="col-lg-7">
        <input type="email" class="form-control" name="email" placeholder="{{ 'placeholder.email'|trans }}">
    </div>
</div>
<hr>
<div class="form-group">
    <label class="col-lg-3 control-label">{{ 'label.password'|trans }}</label>
    <div class="col-lg-7">
        <input type="password" class="form-control" name="password" placeholder="{{ 'placeholder.password'|trans }}">
    </div>
</div>
<div class="form-group">
    <label class="col-lg-3 control-label">{{ 'label.re_enter_password'|trans }}</label>
    <div class="col-lg-7">
