{% trans_default_domain 'Elements' %}

<div id="{{ statusId }}_comment_form" class="media-block {{ additionalClass|default('') }}">
    <a class="media-left" href="#"><img class="img-circle img-xs" alt="{{ user.name }}" src="{{ user.avatar }}"></a>
    <div class="media-body">
        <div class="input-group">
            <input type="text" placeholder="{{ 'placeholder.comment'|trans }}" class="form-control">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">{{ "button.go"|trans }}</button>
            </span>
        </div>
    </div>
</div>