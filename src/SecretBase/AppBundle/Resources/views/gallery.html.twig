{% block stylesheets %}
    <link href="{{ asset('plugins/dropzone/dropzone.css') }}" rel="stylesheet">
    <link href="{{ asset('css/card.css') }}" rel="stylesheet">
    <link href="{{ asset('css/gallery.css') }}" rel="stylesheet">
    <link href="{{ asset('css/ribbon.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="container" class="navbar-fixed">
        {# navbar #}
        {% include 'AppBundle:elements:navbar/lobby-navbar.html.twig' with {
            writeStatus: 'invisible',
            image: 'invisible',
            mainnav: 'invisible'
        } %}

        {# content #}
        <div class="boxed">
            <div id="content-container">
                {# cover #}
                <div class="profile-cover">
                    <div class="cover">
                        {# avatar #}
                        <div class="media" style="position: absolute;bottom:5px;left:25px;">
                            <div class="media-left">
                                <a href="#">
                                    <img class="media-object img-lg" src="{{ asset('img/av1.png') }}">
                                </a>
                            </div>
                            <div class="media-body">
                                <p class="text-2x media-heading mar-no text-thin text-white shadow">Lucy Moon</p>
                                <p class="text-md text-white mar-no">abc@gmail.com</p>
                            </div>
                        </div>

                        {# cover img #}
                        <div class="inner-cover">
                            <img class="img-responsive" src="{{ asset('img/thumbs/img3.jpg') }}" style="height: 228px;" alt="cover">
                        </div>

                        {# menu bar #}
                        <ul class="list-unstyled no-pad cover-menu">
                            <li class="active"><a href="#"><i class="fa fa-fw fa-picture-o"></i> <span>All photos</span></a></li>
                            <li><a href="#"><i class="fa fa-fw fa-camera-retro"></i> <span>Album</span></a></li>
                            <li><a href="#" id="upload-photos"><i class="fa fa-fw fa-camera"></i> <span>Upload photos</span></a></li>
                        </ul>
                    </div>
                </div>

                {# gallery #}
                <div id="page-content">
                    <div id="card-container" class="mar-no">
                        {% include 'AppBundle:elements:cards/image-upload-card.html.twig' with {hidden: "hidden"} %}

                        {% for media in medias %}
                        {% include 'AppBundle:elements:cards/image-card.html.twig' with {
                            id: loop.index,
                            user: user,
                            media: media|default(null)
                        } %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        {# scroll to top #}
        <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/isotope.pkgd.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('plugins/dropzone/dropzone.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dropfile.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/likes-and-comment.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/gallery.js') }}"></script>
{% endblock %}