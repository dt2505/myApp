{% block stylesheets %}
    <link href="{{ asset('plugins/dropzone/dropzone.css') }}" rel="stylesheet">
    <link href="{{ asset('css/card.css') }}" rel="stylesheet">
    <link href="{{ asset('css/gallery.css') }}" rel="stylesheet">
    <link href="{{ asset('css/ribbon.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="container" class="navbar-fixed">
        {# navbar #}
        {% include 'AppBundle:elements:navbar/lobby-navbar.html.twig' with {
            writeStatus: 'invisible',
            image: 'invisible',
            mainnav: 'invisible'
        } %}

        {# content #}
        <div class="boxed">
            <div id="content-container">
                {# cover #}
                {% include "AppBundle:elements:landscape-profile-cover.html.twig" with {allPhotos: "active"} %}

                {# gallery #}
                <div id="page-content">
                    <div id="card-container" class="mar-no">
                        {% include 'AppBundle:elements:cards/image-upload-card.html.twig' with {hidden: "hidden"} %}

                        {% for media in medias %}
                        {% include 'AppBundle:elements:cards/image-card.html.twig' with {
                            id: loop.index,
                            user: user,
                            media: media|default(null)
                        } %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        {# scroll to top #}
        <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/isotope.pkgd.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('plugins/dropzone/dropzone.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dropfile.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/likes-and-comment.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/gallery.js') }}"></script>
{% endblock %}