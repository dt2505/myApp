{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('css/lobby.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div id="container" class="effect navbar-fixed">
    {# navbar #}
    {% include 'AppBundle:elements:navbar/lobby-navbar.html.twig' %}

    {# content #}
    <div class="boxed">
        <div id="content-container">
            <div id="page-content">
                {% include 'AppBundle:elements:cards/lobby-cards.html.twig' %}
            </div>
        </div>
    </div>

    {# scroll to top #}
    <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/isotope.pkgd.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/lobby.js') }}"></script>
{% endblock %}